$f1 = 200px

body
	background-color: #164B69;
	display flex
	align-items center
	justify-content center
	font-size 14px
	text-align center
	padding 50px
	position absolute
	font-family arial

.main 
	background #E3E3E3
	min-height 700px
	min-width 700px
	&__menu
		display flex
		justify-content center
		width 100%
		font-weight bold
		margin 5px
		padding 5px
		&_a
			margin 5px 2%
			padding 5px
			text-decoration none
			color black
			&:hover
				text-decoration none
				color black
				background-color lightgrey
	&__article
		min-height ($f1 * 1.75)
		margin 5px
		padding 5px
		&_p
			margin 5px
			padding 5px
			text-align justify
			text-indent 1.5em
			line-height 2
			word-spacing 5px
			
			img
				display block
				height $f1
				float right
				margin 5px
				padding 5px
	&__video
		margin 5px
		padding 5px
	&__gallery
		display flex
		flex-wrap wrap
		justify-content center
		img
			width 300px
			padding 5px
			margin 5px

@media (max-width: 600px)
	body
		flex-direction column
	.main
		min-height 0px
		min-width 100px
		&__menu
			flex-wrap wrap
		&__article_p_img
			float none
			margin auto
		&__gallery
			flex-direction column
			align-items center
		video
			width 100%
