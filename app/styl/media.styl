@media (max-width: 600px)
	body
		flex-direction column
	.main
		min-height 0px
		min-width 100px
		&__menu
			flex-wrap wrap
		&__article_p_img
			float none
			margin auto
		&__gallery
			flex-direction column
			align-items center
			img
				width 100%
		video
			width 100%
		&__centerblock
			grid-template-rows repeat(3, 1fr)
			grid-template-columns 1fr
			&__sideblock
				grid-area 1 / 1 / 2 / 2
			&__first_article
				grid-area 2 / 1 / 3 / 2
			&__second_article
				grid-area 3 / 1 / 4 / 2
	p
		img
			width 100%
			margin auto
			padding 0px